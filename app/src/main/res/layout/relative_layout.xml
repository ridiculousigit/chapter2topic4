<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Button Satu-->
    <Button
        android:id="@+id/btnsatu"
        android:text="button satu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--2-->
    <Button
        android:id="@+id/btndua"
        android:layout_below="@+id/btnsatu"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button Tiga-->
    <Button
        android:id="@+id/btntiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/btnsatu"
        android:text="button tiga" />

    <!--4-->
    <Button
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="4"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--5-->
    <Button
        android:id="@+id/btnlima"
        android:layout_centerInParent="true"
        android:text="5"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--6-->
    <Button
        android:layout_below="@+id/btnlima"
        android:layout_alignParentRight="true"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>