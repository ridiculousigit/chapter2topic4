<?xml version="1.0" encoding="utf-8"?>

<!--Latihan 2 - Relative Layout-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Button 1-->
    <Button
        android:id="@+id/btnsatu"
        android:text="1"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button 2-->
    <Button
        android:id="@+id/btndua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsatu"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="2" />

    <!--Button 3-->
    <Button
        android:id="@+id/btntiga"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btndua"
        android:text="3"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button 4-->
    <Button
        android:id="@+id/btnempat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btntiga"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="4" />

    <!--Button 5-->
    <Button
        android:id="@+id/btnlima"
        android:layout_centerInParent="true"
        android:text="5"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button 6-->
    <Button
        android:id="@+id/btnenam"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btnlima"
        android:text="6"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button 7-->
    <Button
        android:id="@+id/btntujuh"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/black"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--Button 8-->
    <Button
        android:id="@+id/btndelapan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:text="8" />

    <!--Button 9-->
    <Button
        android:id="@+id/btnsembilan"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btntujuh"
        android:text="9"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--Button 10-->
    <Button
        android:id="@+id/btnsepuluh"
        android:layout_below="@+id/btnenam"
        android:text="10"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>